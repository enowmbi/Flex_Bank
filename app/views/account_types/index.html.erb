<p id="notice"><%= notice %></p>

<h1>Account Types</h1>
<div class="table-responsive">
    <table class="table table-condensed table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Normal balance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @account_types.each do |account_type| %>
      <tr>
        <td><%= account_type.name %></td>
        <td><%= account_type.description %></td>
        <td><%= account_type.normal_balance %></td>
        <td><%= link_to 'Show', account_type %></td>
        <td><%= link_to 'Edit', edit_account_type_path(account_type) %></td>
        <td><%= link_to 'Destroy', account_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="form-group">
<%= link_to 'New Account Type', new_account_type_path,:class =>"btn btn-primary" %>
</div>
