<p id="notice"><%= notice %></p>

<h1>Bank Account Types</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_account_types.each do |bank_account_type| %>
      <tr>
        <td><%= bank_account_type.name %></td>
        <td><%= bank_account_type.description %></td>
        <td><%= link_to 'Show', bank_account_type %></td>
        <td><%= link_to 'Edit', edit_bank_account_type_path(bank_account_type) %></td>
        <td><%= link_to 'Destroy', bank_account_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

