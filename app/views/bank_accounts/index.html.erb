<p id="notice"><%= notice %></p>

<h1>Bank Accounts</h1>

<table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Account number</th>
      <th>Currency</th>
      <th>Enable sms alert</th>
      <th>Enable email alert</th>
      <th>Account type</th>
      <th>Account officer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.account_number %></td>
        <td><%= bank_account.currency %></td>
        <td><%= bank_account.enable_sms_alert %></td>
        <td><%= bank_account.enable_email_alert %></td>
        <td><%= bank_account.bank_account_type_id %></td>
        <td><%= bank_account.account_officer %></td>
        <td><%= link_to 'Show',client_bank_account_path(bank_account.client,bank_account),class: "btn btn-info btn-xs"  %></td>
        <td><%= link_to 'Edit', edit_client_bank_account_path(bank_account.client,bank_account),class: "btn btn-info btn-xs"  %></td>
        <td><%= link_to 'Destroy', client_bank_account_path(bank_account.client,bank_account), method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-info btn-xs"  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bank Account', new_client_bank_account_path, class:"btn btn-primary" %>
