<p id="notice"><%= notice %></p>

<h1>Client Types</h1>

<table class="table table-condensed table-stripped table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Is group</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @client_types.each do |client_type| %>
      <tr>
        <td><%= client_type.name %></td>
        <td><%= client_type.description %></td>
        <td><%= status_tag(client_type.is_group) %></td>
        <td><%= link_to 'Show', client_type %></td>
        <td><%= link_to 'Edit', edit_client_type_path(client_type) %></td>
        <td><%= link_to 'Destroy', client_type, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client Type', new_client_type_path,class:"btn btn-primary" %>
