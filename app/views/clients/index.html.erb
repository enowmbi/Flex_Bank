<p id="notice"><%= notice %></p>

<h1>Clients</h1>

<table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Address</th>
      <th>City</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Identification type</th>
      <th>Identification number</th>
      <th>Client type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>

        <td><%= client.full_name %></td>
        <td><%= client.address %></td>
        <td><%= client.city %></td>
        <td><%= client.phone %></td>
        <td><%= client.email %></td>
        <td><%= client.identification_type.name %></td>
        <td><%= client.identification_number %></td>
        <td><%= client.client_type.name %></td>
        <td><%= link_to 'Show', client,class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Edit', edit_client_path(client),class: "btn btn-info btn-xs" %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' },class: "btn btn-info btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path,class:"btn btn-primary" %>
