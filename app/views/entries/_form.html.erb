<%= form_for(entry) do |f| %>
  <% if entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% entry.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-6 form-group">
    <%= f.label :date %>
    <%= f.date_select :date,class:"date" %>
  </div>

  <div class="col-md-6 form-group">
    <%= f.label :description %>
    <%= f.text_field :description,class:"form-control" %>
  </div>

  <div class="col-md-6 form-group">
    <%= f.label :debit_account_id %>
    <%= f.select(:debit_account_id,Account.all.map{|a|[a.name,a.id]},{},class:"form-control") %>
  </div>

  <div class="col-md-6 form-group">
    <%= f.label :credit_account_id %>
    <%= f.select(:credit_account_id,Account.all.map{|a|[a.name,a.id]},{},class:"form-control") %>
  </div>

  <div class="col-md-6 form-group">
    <%= f.label :amount %>
    <%= f.text_field :amount,class:"form-control" %>
  </div>

  <div class="actions">
    <%= f.submit class:"btn btn-primary" %>
  </div>
<% end %>
