<p id="notice"><%= notice %></p>

<h1>Entries</h1>

<table class="table table-striped table-condensed table-hover">
  <thead>
    <tr>
      <th>Date</th>
      <th>Description</th>
      <th>Debit account</th>
      <th>Credit account</th>
      <th>Amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entries.each do |entry| %>
      <tr>
        <td><%= entry.date %></td>
        <td><%= entry.description %></td>
        <td><%= Account.find_by_id(entry.debit_account_id).name %></td>
        <td><%= Account.find_by_id(entry.credit_account_id).name %></td>
        <td><%= number_to_currency(entry.amount,precision:0,unit:"F",format: "%n %u") %></td>
        <td><%= link_to 'Show', entry %></td>
        <td><%= link_to 'Edit', edit_entry_path(entry) %></td>
        <td><%= link_to 'Destroy', entry, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Entry', new_entry_path,class:"btn btn-primary" %>
