<p id="notice"><%= notice %></p>

<h1>Next Of Kins</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Middle name</th>
      <th>Last name</th>
      <th>Address</th>
      <th>Phone</th>
      <th>Email</th>
      <th>Relationship</th>
      <th>Identification type</th>
      <th>Identification number</th>
      <th>Bank account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @next_of_kins.each do |next_of_kin| %>
      <tr>
        <td><%= next_of_kin.first_name %></td>
        <td><%= next_of_kin.middle_name %></td>
        <td><%= next_of_kin.last_name %></td>
        <td><%= next_of_kin.address %></td>
        <td><%= next_of_kin.phone %></td>
        <td><%= next_of_kin.email %></td>
        <td><%= next_of_kin.relationship %></td>
        <td><%= next_of_kin.identification_type_id %></td>
        <td><%= next_of_kin.identification_number %></td>
        <td><%= next_of_kin.bank_account_id %></td>
        <td><%= link_to 'Show', next_of_kin %></td>
        <td><%= link_to 'Edit', edit_next_of_kin_path(next_of_kin) %></td>
        <td><%= link_to 'Destroy', next_of_kin, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

