<%= form_for(organization) do |f| %>
  <% if organization.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(organization.errors.count, "error") %> prohibited this organization from being saved:</h2>

      <ul>
        <% organization.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <section>
    <div class="row">
      <div class="col-md-8">
        <div class="row">
          <div class="col-md-12 form-group">
            <%= f.label :name %>
            <%= f.text_field :name, class:"form-control"%>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8 form-group">
            <%= f.label :motto %>
            <%= f.text_field :motto,class:"form-control" %>
          </div>

          <div class="col-md-4 form-group">
            <%= f.label :parent_id %>
            <%= f.select(:parent_id,Organization.all.map{|i|[i.name,i.id]},{},class:"form-control") %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 form-group">
            <%= f.label :address %>
            <%= f.text_area :address,class:"form-control" %>
          </div>
          <div class="col-md-6 form-group">
            <%= f.label :city %>
            <%= f.text_field :city,class:"form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 form-group">
            <%= f.label :phone %>
            <%= f.text_field :phone,class:"form-control" %>
          </div>
          <div class="col-md-6 form-group">
            <%= f.label :email %>
            <%= f.text_field :email,class:"form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-6 form-group">
            <%= f.label :tax_payers_number %>
            <%= f.text_field :tax_payers_number,class:"form-control" %>
          </div>

          <div class="col-md-6 form-group">
            <%= f.label :cnps_number %>
            <%= f.text_field :cnps_number,class:"form-control" %>
          </div>

        </div>
      </div>
      <div class="row">
        <div class="col-md-4 form-group">
          <br/>
          <%= image_tag(@organization.image.url(:large) || @organization.default_url,:alt=>"No image has been selected",id:"picture_image", class:"img-responsive img-thumbnail")%>			
          <br/>				
          <%= f.file_field :image,id:"file_input",fileName:"this is it",:as =>:file, hint: f.object.image.present? ? image_tag(f.object.image.url(:large)) : content_tag(:span,"no image has been selected"), class:"form-control" %>
        </div>
      </div>			
    </div>
      <div class="col-lg-8 col-lg-offset-2 text-center">
        <%= f.submit class: "btn btn-primary"%>
      </div>
    </div>
  </div>
</section>
      <% end %>
      <br/>
      <script language="javascript">
        $("#file_input").change(function(){
          readURL(this);
        });
      </script>
